<%= render 'shared/navbar' %>
<div class="index-companies-page-wrapper main-wrapper">
  <h1>Les entreprises</h1>

  <div class="index-companies-form-wrapper">

    <div class="index-companies-info">
      <h2><%= @companies.try(:count) %> rÃ©sultats</h2>
      <div class="companies-count" id="situation-green">
        <i class="fas fa-exclamation-circle"></i>
        <p><%= hiring_companies(@companies) %> recrutent</p>
      </div>
    </div>


    <div class="index-companies-form">

      <%= form_tag companies_path, method: :get do %>
          <%= text_field_tag :name, params[:name], placeholder: "Chercher par nom d'entreprise", class: 'input large-input' %>

        <div class="form-inline">
          <%= select_tag(:city, options_for_select(city_list, params[:city]), {:prompt => 'Chercher par ville', :class => 'input'}) %>

          <%= submit_tag 'Valider mes filtres', class: 'full-button' %>
        </div>
      <% end %>

    </div>
  </div>

  <div class="company-card-wrapper">
    <% @companies.each do |company| %>
      <%= link_to company_path(company) do %>
        <%= render 'shared/company-card', company: company %>
      <% end %>
    <% end %>
  </div>

  <%= render 'shared/help-bubble' %>
</div>
