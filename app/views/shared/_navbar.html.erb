<div class="navbar">

  <div class="navigation-links">
    <div class="navigation-item">
      <%= link_to users_path, class: active_class_for('alumni') do %>
        <div>
          <i class="fas fa-users"></i>
          Les alumni
        </div>
      <% end %>
    </div>

    <div class="navigation-item">
      <%= link_to companies_path, class: active_class_for('company') do %>
        <div>
          <i class="fas fa-briefcase"></i>
          Les entreprises
        </div>
      <% end %>
    </div>

    <div class="navigation-item">
      <%= link_to schools_path, class: active_class_for('school') do %>
        <div>
          <i class="fas fa-graduation-cap"></i>
          Les écoles
        </div>
      <% end %>
    </div>

    <% admins_only do %>
      <div class="navigation-item">
        <%= link_to admin_statistics_path, class: active_class_for('statistics') do %>
          <div>
            <i class="fas fa-chart-line"></i>
            Les statistiques
          </div>
        <% end %>
      </div>
      <div class="navigation-item">
        <%= link_to admin_emails_path, class: active_class_for('emails') do %>
          <div>
            <i class="fas fa-comments"></i>
            Emails groupés
          </div>
        <% end %>
      </div>
    <% end %>

    <% non_admins_only do %>
      <div class="navigation-item">
        <%= link_to 'https://www.leschartreux.com', target: :_blank do %>
          <div>
            <i class="fas fa-external-link-alt"></i>
            L'Institution des Chartreux
          </div>
        <% end %>
      </div>
    <% end %>

  </div>





  <div class="session-link">
    <% if user_signed_in? %>
      <%= link_to destroy_user_session_path, method: :delete do %>
        <i class="fas fa-sign-out-alt"></i>
      <% end %>
      <%= link_to user_path(current_user) do %>
        <% if current_user.photo.attached? %>
          <%= cl_image_tag current_user.photo.key %>
        <% else %>
          <%= image_tag "blank-avatar.png" %>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>
