<div class="school-experience-card">
  <div class="icon">
    <%= image_tag('school.png') %>
  </div>
  <div class="description">
    <h3><%= school_experience.title %></h3>
    <h4><%= school_experience.school.name %></h4>
    <p><%= school_experience.location if school_experience.location.present? %> | <%= school_experience.start_time %> - <%= school_experience.end_time %></p>
  </div>
</div>
