<div class="company-school-card shadow-div card-container">
  <% if company.photo.attached? %>
    <%= cl_image_tag company.photo.key %>
  <% else %>
    <%= image_tag "company.png", alt: "company-image" %>
  <% end %>
  <div class="company-school-card-info">
    <h2><%= company.name %></h2>
    <h3><%= company.city %></h3>
    <div class="recruiting">
      <p><%= pluralize company.users.uniq.count, 'alumni travaille ici', 'alumni travaillent ici' %></p>
      <% if hiring?(company) %>
        <i class="fas fa-exclamation-circle situation" id="situation-green"></i>
      <% end %>
    </div>
  </div>
  <%= link_to '', company_path(company), class: 'cover-link'  %>
</div>
