<div class="sign-in-wrapper">
  <%= image_tag('logo-chartreux.png') %>

  <div class="form">
    <h2>Se connecter</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Email', class: 'form-field' %>
      <%= f.password_field :password, autocomplete: "current-password", placeholder: 'Mot de passe', class: 'form-field' %>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, value: 'Se souvenir de moi' %>
        </div>
      <% end %>
      <div class="actions">
        <%= f.submit "Se connecter", class: 'empty-button' %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>








