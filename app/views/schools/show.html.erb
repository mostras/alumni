<div class="navbar-wrapper">
  <%= render 'shared/alert' %>
  <%= render 'shared/navbar' %>
</div>
<div class="main-wrapper">
  <div class="school-wrapper shadow-div">

      <div class="school-photo">
        <% if @school.photo.attached? %>
          <%= cl_image_tag school.photo.key %>
        <% else %>
          <%= image_tag "school.png", alt: "school-image" %>
        <% end %>
      </div>
      <div class="school-info">
        <h1><%= @school.name %></h1>
        <p><%= @school.city %></p>
      </div>

  </div>

  <% if @current_schools.any? %>
    <div class="alumnis-group my-10">
      <h2 id="situation-orange">Actuellement ici</h2>
      <div class="grid">
        <% @current_schools.each do |school|%>
          <%= render 'shared/student_card', student: school.user %>
        <% end %>
      </div>
    </div>
  <% end %>

  <% if @former_schools.any? %>
    <div class="alumnis-group my-10">
      <h2 id="situation-red">Anciennement ici</h2>
      <div class="grid">
        <% @former_schools.each do |school|%>
            <%= render 'shared/student_card', student: school.user %>
        <% end %>
      </div>
    </div>
  <% end %>

  <%= render 'shared/help-bubble' %>
</div>
