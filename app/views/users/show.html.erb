<%= render 'shared/navbar' %>


<div class="user-show-wrapper main-wrapper">
  <div class="left-side">

    <div class="user-description-wrap">
      <% if @student == current_user %>
        <%= link_to edit_user_path(@student), class: 'edit-link' do %>
          <%= render 'shared/edit-icon' %>
        <% end %>
      <% end %>

      <div class="user-description">
        <% if @student.photo.attached? %>
          <%= cl_image_tag @student.photo.key %>
        <% else %>
          <%= image_tag "blank-avatar.png" %>
        <% end %>
          <h1><span><%= @student.first_name %></span><br><%= @student.last_name %></h1>
      </div>

      <div class="link">
        <% unless @student.linkedin_url.nil? || @student.linkedin_url === '' %>
          <a href="<%= @student.linkedin_url%>" target="_blank"><i class="fab fa-linkedin-in"></i></a>
        <% end %>
        <% unless @student.email.nil?  || @student.email === '' %>
          <a href="mailto:<%= @student.email%>"><i class="far fa-envelope"></i></a>
        <% end %>
        <% unless @student.phone_number.nil? || @student.phone_number === '' %>
          <a href="tel:<%= @student.phone_number%>"><i class="fas fa-phone"></i></a>
        <% end %>
        <% unless @student.whatsapp_number.nil? || @student.whatsapp_number === '' %>
          <a href="https://wa.me/+33<%= @student.whatsapp_number%>" target="_blank"><i class="fab fa-whatsapp"></i></a>
        <% end %>
      </div>
    </div>

    <div class="situation">
      <h2>SITUATION</h2>
      <% if @student.looking_for_job? || @student.looking_for_internship? || @student.company_hire? %>
        <% if @student == current_user %>
          <%= link_to edit_situation_user_path(@student), class: 'edit-link' do %>
            <%= render 'shared/edit-icon' %>
          <% end %>
        <% end %>


        <% if @student.looking_for_job? %>
          <div class="notification" id="situation-red">
            <i class="fas fa-exclamation-circle"></i>
            <h4>JE RECHERCHE UN EMPLOI</h4>
          </div>
        <% end %>
        <% if @student.looking_for_internship? %>
          <div class="notification" id="situation-orange">
            <i class="fas fa-exclamation-circle"></i>
            <h4>JE RECHERCHE UN STAGE</h4>
          </div>
        <% end %>
        <% if @student.company_hire? %>
          <div class="notification" id="situation-green">
            <i class="fas fa-exclamation-circle"></i>
            <h4>MON ENTREPRISE RECRUTE</h4>
          </div>
        <% end %>
      <% else %>
          <%= link_to edit_situation_user_path do %>
            Changez votre situation
          <% end %>
      <% end %>
    </div>

    <div class="diplomas">
      <% if @student == current_user && @student.tags.any? %>
        <%= link_to tags_path, class: 'edit-link' do %>
          <%= render 'shared/edit-icon' %>
        <% end %>
      <% end %>

      <h2>DIPLÔMES</h2>

      <% if @student.tags.any? %>
        <ul>
          <% @student.tags.each do |tag| %>
            <li>
              <%= render 'shared/diploma-tag-big', tag: tag %>
            </li>
          <% end %>
        </ul>
      <% else %>
        <% if @student == current_user %>
          <%= link_to tags_path do %>
            Cliquez pour ajouter vos diplômes
          <% end %>
        <% end %>
      <% end %>
    </div>

    <div class="sectors">
      <h2>SECTEURS</h2>
      <% if @student.user_sectors.any? %>
        <%= link_to user_sectors_path, class: 'edit-link' do %>
          <%= render 'shared/edit-icon' %>
        <% end %>
      <% end %>
       <% if @student.user_sectors.any? %>
          <ul>
            <% @student.user_sectors.each do |user_sector| %>
              <li>
                <%= render 'shared/user-sector-card', user_sector: user_sector %>

              </li>
            <% end %>
          </ul>
        <% else %>
          <% if @student == current_user %>
            <%= link_to user_sectors_path do %>
              Cliquez pour ajouter vos secteurs d'activités
            <% end %>
          <% end %>
        <% end %>
    </div>
  </div>

  <div class="right-side">
    <div class="work-experiences">
      <h2>EXPERIENCES</h2>
      <% if @student.work_experiences.any? %>
        <% @student.work_experiences.each do |work_experience| %>
          <%= render 'shared/work_experience-card', work_experience: work_experience %>
        <% end %>
      <% end %>
    </div>

    <div class="school-experiences">
      <h2>FORMATIONS</h2>
      <% if @student.school_experiences.any? %>
        <% @student.school_experiences.each do |school_experience| %>
          <%= render 'shared/school_experience-card', school_experience: school_experience %>
        <% end %>
      <% end %>
    </div>
  </div>

<%= render 'shared/help-bubble' %>
</div>











